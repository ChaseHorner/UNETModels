import json

status_file = '/kuhpc/scratch/kbs/c710h797/UNETModels/outputs/unet16d/status.json'
length = 243

with open(status_file, 'r') as f:
    status = json.load(f)

for key in status["metrics"].keys():
    status["metrics"][key] = status["metrics"][key][:length]

status["model_path"] = f"./outputs/unet4b/unet4b_best_epoch{length}.pt"
status["optimizer_path"] = ""
status["early_stopping"] = False
status["last_trained_epoch"] = length

with open(status_file, 'w') as f:
    json.dump(status, f, indent=2)

